---
const { headline, herotext1, herotext2 } = Astro.props;
import "../css/main.css";
---

<section class="hero-banner">
  <div class="hero-video">
    <slot name="video" />
  </div>
  <div class="hero-info">
    <h1>{headline}</h1>
    <div>
      <p>{herotext1}</p>
      <p>{herotext2}</p>
    </div>
    <div class="hero-buttons">
      <slot name="buttons" />
    </div>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    overflow: hidden;
    min-height: 85dvh;
    display: grid;
    align-items: center;
    justify-content: center;
  }
  .hero-video {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  .hero-video :global(video),
  .hero-video :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .hero-info {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 60vw;
    gap: 24px;
    color: white;
    padding-bottom: 150px;
  }
  .hero-info h1 {
    text-align: center;
    font-size: 4rem;
    font-style: normal;
    line-height: 100%;
  }
  .hero-info p {
    text-align: center;
    font-size: 1.125rem;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
    letter-spacing: -0.0225rem;
  }
  .hero-buttons {
    display: flex;
    gap: 16px;
  }
</style>
