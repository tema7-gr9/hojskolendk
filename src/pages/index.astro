    </video>
    <video slot="media" autoplay muted loop playsinline>
      <source src="/public/video/video-karrusel-placeholder.mp4" />
    </video>
    <video slot="media" autoplay muted loop playsinline>
      <source src="/public/video/video-karrusel-placeholder.mp4" />
    </video>
    <video slot="media" autoplay muted loop playsinline>
      <source src="/public/video/video-karrusel-placeholder.mp4" />
    </video>
  </Oplevelser>
</Layout>
